{
	"name": "@versecafe/zcli",
	"version": "0.1.2",
	"description": "A modern, Zod 4-powered CLI framework",
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"default": "./dist/index.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "bun run build.ts",
		"lint": "biome check .",
		"fix": "biome check . --fix",
		"test": "bun test",
		"typecheck": "tsc --noEmit",
		"prepublishOnly": "bun lint && bun test && bun typecheck && bun run build"
	},
	"keywords": [
		"cli",
		"zod",
		"typescript",
		"command-line",
		"argument-parser",
		"type-safe"
	],
	"author": "versecafe",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/versecafe/zcli"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@types/bun": "1.3.3",
		"typescript": "^5.8.3"
	},
	"peerDependencies": {
		"zod": "^4.0.0"
	},
	"dependencies": {
		"zod": "^4.1.13"
	}
}
